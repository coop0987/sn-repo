
'use strict';

/* App Module */

var sweatnetApp = angular.module('sweatnetApp', [
  'ngRoute',
  'ng-polymer-elements',
  'sweatnetControllers',
  'sweatnetFilters',
  'sweatnetServices'
]);

sweatnetApp.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when('/home', {
        templateUrl: '<%= asset_path("templates/home.html")%>',
        controller: 'HomeCtrl'
      }).
      when('/search', {
        templateUrl: '<%= asset_path("templates/search.html")%>',
        controller: 'SearchCtrl'
      }).
      otherwise({
        redirectTo: '/home'
      });
  }]);
